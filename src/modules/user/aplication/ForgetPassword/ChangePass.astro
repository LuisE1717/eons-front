---

import Header from "./React/components/Header/Header";
import Message from './React/components/Message/Message'
import Button from './React/components/Button/Button'
import { getI18N } from "../../../../i18n";
import AuthHeader from "../../../../layouts/AuthHeader.astro";
import Footer from "../../../../layouts/Footer.astro";
import ChangePassReact from "./React/ChangePass";

const currentLocale  = Astro.cookies.get('eons_lng')?.value || 'en'
const i18 = getI18N({currentLocale})

const {token,email} = Astro.props
---
<AuthHeader/>
<div class="flex w-full justify-center px-7 pt-16">
    <div class="max-w-[420px] w-full flex flex-col items-center mb-12">
        <Header/>
        <Message message={i18["ChangePassword"].message} title={i18["ChangePassword"].title}/>
        <ChangePassReact currentLocale={currentLocale} i18={i18} email={email} token={token} client:load/>
    </div>
</div>
<Footer/>