---
import AppContainer from "../../layouts/AppContainer.astro";
import Header from "../../layouts/Header.astro";
import Footer from "../../layouts/Footer.astro";
import BackButton from '../../components/UI/BackButton.astro'
import { getUltimaConsulta } from '../../utils/api/evaluation';

const token = Astro.cookies.get('eons_token')?.value || ''
const type = Astro.url.searchParams.get('type') || 'etp1'
const consultaId = Astro.url.searchParams.get('id') || ''

let resultadosData = null;

// Intentar obtener datos de la consulta
if (token && consultaId) {
  try {
    // En un entorno real, aqu√≠ har√≠as una llamada a la API para obtener los datos espec√≠ficos
    // Por ahora usamos localStorage como fallback
    const resultadosLocal = Astro.cookies.get(`resultados_${type}`)?.value;
    if (resultadosLocal) {
      resultadosData = JSON.parse(resultadosLocal);
    }
  } catch (e) {
    console.error('Error loading results:', e);
  }
}

const fechaHoy = new Date().toLocaleDateString('es-ES', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<AppContainer>
    <Header/>
    <div class="flex flex-col ml-3 mt-2">
        <BackButton routeProp={'/services'}/>
    </div>
    
    <div class="resultados-container relative w-full min-h-screen flex items-center justify-center py-8">
        {/* Fondo m√≠stico */}
        <div class="absolute inset-0 bg-gradient-to-br from-purple-900 via-indigo-900 to-black opacity-80 z-0"></div>
        
        {/* Efecto de part√≠culas */}
        <div class="absolute inset-0 z-0 opacity-30">
            {[...Array(20)].map((_, i) => (
                <div 
                    key={i}
                    class="absolute rounded-full bg-purple-500 opacity-50"
                    style={{
                        width: `${Math.random() * 20 + 5}px`,
                        height: `${Math.random() * 20 + 5}px`,
                        top: `${Math.random() * 100}%`,
                        left: `${Math.random() * 100}%`,
                        animation: `float ${Math.random() * 10 + 10}s infinite ease-in-out`,
                        animationDelay: `${Math.random() * 5}s`
                    }}
                ></div>
            ))}
        </div>
        
        <div class="relative w-full max-w-4xl z-10 mx-4">
            {/* Marco de la imagen */}
            <div class="relative w-full">
                <img
                    src="/marco-ok.png"
                    alt="marco de resultados"
                    class="object-contain w-full mx-auto desktop:h-[75%] laptop:h-[75%] tablet:h-[80%] phone:h-[85%]"
                />
                
                {/* Contenedor de resultados con scroll */}
                <div class="absolute inset-0 flex items-center justify-center p-4 sm:p-6 md:p-8">
                    <div class="resultados-content w-full h-full overflow-y-auto px-4 sm:px-8 py-6 custom-scrollbar">
                        <h2 class="text-2xl sm:text-3xl font-bold text-white text-center mb-4">
                            üîÆ Or√°culo del D√≠a üîÆ
                        </h2>
                        
                        <p class="text-purple-300 text-center mb-6 text-sm">
                            {fechaHoy}
                        </p>

                        {resultadosData ? (
                            <div class="space-y-6">
                                {/* P√°rrafo unificado */}
                                <div class="parrafo-unificado bg-gradient-to-r from-purple-600 to-indigo-600 rounded-xl p-6 border-2 border-purple-400 shadow-lg">
                                    <h3 class="text-xl font-bold text-white mb-3">‚ú® Tu Lectura Completa ‚ú®</h3>
                                    <p class="text-white text-lg leading-relaxed">
                                        {resultadosData.parrafoUnificado}
                                    </p>
                                </div>

                                {/* Mensaje final */}
                                {resultadosData.mensajeFinal && (
                                    <div class="mensaje-final bg-purple-800 bg-opacity-60 rounded-xl p-5 border border-purple-500">
                                        <h3 class="text-lg font-semibold text-purple-200 mb-3">üåü Mensaje Final</h3>
                                        <p class="text-white leading-relaxed">
                                            {resultadosData.mensajeFinal}
                                        </p>
                                    </div>
                                )}

                                {/* Detalles de cada lanzamiento */}
                                <div class="detalles-lanzamientos">
                                    <h3 class="text-lg font-semibold text-purple-200 mb-4 border-b border-purple-700 pb-2">
                                        üìú Detalles de tus Lanzamientos
                                    </h3>
                                    <div class="space-y-4">
                                        {resultadosData.pasos.map((paso: any, index: number) => (
                                            <div key={index} class="paso-detalle bg-purple-900 bg-opacity-60 rounded-lg p-4 border border-purple-600">
                                                <div class="flex items-center justify-between mb-3">
                                                    <span class="text-lg font-bold text-purple-300">
                                                        Lanzamiento {paso.paso}
                                                    </span>
                                                    <span class="text-sm text-purple-400 bg-purple-800 px-2 py-1 rounded">
                                                        {paso.combinacion}
                                                    </span>
                                                </div>
                                                
                                                <div class="respuesta-detallada mb-3">
                                                    <h4 class="text-md font-semibold text-purple-200 mb-2">üìñ Predicci√≥n:</h4>
                                                    <p class="text-white text-sm leading-relaxed">
                                                        {paso.resultado}
                                                    </p>
                                                </div>
                                                
                                                <div class="interpretacion-detallada">
                                                    <h4 class="text-md font-semibold text-purple-200 mb-2">üí´ Interpretaci√≥n:</h4>
                                                    <p class="text-purple-300 text-sm italic">
                                                        {paso.interpretacion}
                                                    </p>
                                                </div>
                                            </div>
                                        ))}
                                    </div>
                                </div>

                                {/* Bot√≥n para nuevo test */}
                                <div class="nuevo-test text-center pt-6 border-t border-purple-700">
                                    <a 
                                        href="/launch" 
                                        class="inline-block bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-bold py-3 px-8 rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg"
                                        onclick="localStorage.removeItem('evaluation'); localStorage.removeItem('resultados_etp1'); localStorage.removeItem('resultados_etp2');"
                                    >
                                        üéØ Realizar Nuevo Test
                                    </a>
                                    <p class="text-purple-300 text-sm mt-3">
                                        Descubre nuevos mensajes del universo
                                    </p>
                                </div>
                            </div>
                        ) : (
                            <div class="text-center text-white py-12">
                                <div class="text-6xl mb-4">üîç</div>
                                <p class="text-xl mb-4">No hay resultados de consulta disponibles</p>
                                <p class="text-purple-300">Realiza una consulta al or√°culo primero</p>
                                <a href="/launch" class="mt-6 inline-block bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-full transition-colors">
                                    Realizar Consulta
                                </a>
                            </div>
                        )}
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <Footer/>
</AppContainer>

<style>
    .resultados-content {
        max-height: 70vh;
        scrollbar-width: thin;
        scrollbar-color: rgba(139, 92, 246, 0.5) rgba(0, 0, 0, 0.1);
    }
    
    .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
    }
    
    .custom-scrollbar::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.1);
        border-radius: 3px;
    }
    
    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: rgba(139, 92, 246, 0.5);
        border-radius: 3px;
    }
    
    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: rgba(139, 92, 246, 0.7);
    }
    
    .parrafo-unificado {
        background: linear-gradient(135deg, #8B5CF6 0%, #6366F1 100%);
        box-shadow: 0 10px 25px rgba(139, 92, 246, 0.3);
    }
    
    .paso-detalle {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .paso-detalle:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(139, 92, 246, 0.3);
    }
    
    @keyframes float {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(10deg); }
    }
    
    @media (max-width: 640px) {
        .resultados-content {
            padding: 0.5rem;
            max-height: 60vh;
        }
        
        .paso-detalle {
            padding: 0.75rem;
        }
        
        .parrafo-unificado {
            padding: 1rem;
        }
    }
</style>