---
import { getI18N } from "../../i18n"
import { findBackUrl } from "../../utils/navigation"

const currentLocale  = Astro.cookies.get('eons_lng')?.value || 'es'
const i18 = getI18N({currentLocale})

const {routeProp} = Astro.props
---

<div class="flex p-1 cursor-pointer">
    <a id="a" href={routeProp?routeProp:null}>
    <svg width="32" height="32" viewBox="0 0 1024 1024" fill="#000000" class="icon"  version="1.1" xmlns="http://www.w3.org/2000/svg">
        <path d="M669.6 849.6c8.8 8 22.4 7.2 30.4-1.6s7.2-22.4-1.6-30.4l-309.6-280c-8-7.2-8-17.6 0-24.8l309.6-270.4c8.8-8 9.6-21.6 2.4-30.4-8-8.8-21.6-9.6-30.4-2.4L360.8 480.8c-27.2 24-28 64-0.8 88.8l309.6 280z" fill="" />
    </svg>
    </a>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const link = document.getElementById('a')

        function go_back(){
            if(link)
                history.back()
        }

        if(link)
            link.addEventListener('click',go_back)
    })
</script>

