---
interface Props {
	text: string;
    bgColor?:string;
    bg_hover?:string;
    color?:string
}

const {text, bgColor, bg_hover, color} = Astro.props
---

<div class=`inline-flex justify-center 
  shadow-black/5
  py-3 px-4
  text-${color?color:''}`
  >

    <span>
        {text}
    </span>
</div>

<style
define:vars={{ bgColor: bgColor?bgColor:'transparent', bg_hover: bg_hover?bg_hover:"#f1f5f9"}}
>
    div {
        /* background-color: var(--bgColor); */
        cursor: pointer;
        border-radius: 2rem;
        border-color: #c3c3c3;
        border-width: 1px;
        box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 12px 20px -6px rgb(0 0 0 / 0.1);
        font-size: 1.5rem;
        line-height: 2rem;
    }

    div:hover{
        background-color: var(--bg_hover);
    }

    @media (max-width: 600px){
        div {
            font-size: medium;
            line-height: normal;
        }
    }
</style>